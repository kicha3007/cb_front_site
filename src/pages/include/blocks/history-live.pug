
include decor-live

mixin history-live(data)
	a(href="#").history-live&attributes(attributes)
		.history-live__shadow.history-live__shadow_pos_left
		.history-live__container
			.history-live__wrap
				.history-live__column.history-live__column_pos_1
					.history-live__content
						.history-live__icon
							+decor-live({"title": "live"})
						.history-live__title
							| Прямой эфир
							br
							| / 11:00
						.history-live__subtitle
						.history-live__name
							| Дом для банка: тайны
							br
							| банковских зданий


				.history-live__column.history-live__column_pos_2
					.history-live__img-box
						img.history-live__img.history-live__img_show_desc(src="assets/img/main/microphone.png", alt='')



